{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2017"],
    "types": ["jest", "node"],
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "resource", "src/__test__"]
}
